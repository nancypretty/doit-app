<%- include('partials/header') %>

    <div class="auth-page">
        <p class="flash"> <%= message %> </p>
        <div class="auth-logo">
            <img src="/images/doit.png" alt="logo">
        </div>
        <div class="alert">
            <h1>
                <i class="fa-solid fa-bell"></i>  Please register first!
            </h1>
        </div>
        <div class="auth-layout">
            <div class="auth-main">
                    <div class="top">
                        <div class="login">
                            <a href="/" role="button"><p>LOGIN</p></a>
                        </div>
                        <div class="register" >
                            <a href="/register" role="button"><p>REGISTER</p></a>
                        </div>
                    </div>
                <form action="/register" method="POST"> 
                    <div class="bottom-register">
                        <input type="text" placeholder="username or email" name="username" autocomplete="off">
                        <input type="password" placeholder="password" name="password">
                        <button type="submit"> LEGGO! </button>
                    </div>
                </form>
            </div>
            <h4>- Or -</h4>
            <div class="google-login">
                <a href="/auth/google" role="button" class="btn btn-block btn-social btn-google">
                    <span class="fa fa-google"></span> 
                    <p> Sign in with Google </p>
                </a>
                
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>